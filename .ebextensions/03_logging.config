files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/flask.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/log/flask/application.log
      /var/log/flask/error.log
      
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/flask.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/log/flask/*

  "/etc/logrotate.d/flask":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/flask/*.log {
        daily
        rotate 10
        missingok
        compress
        notifempty
        copytruncate
      }

container_commands:
  01_create_log_dir:
    command: |
      mkdir -p /var/log/flask
      chmod 777 /var/log/flask
