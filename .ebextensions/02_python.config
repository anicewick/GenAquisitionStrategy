option_settings:
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/var/app/current"
    FLASK_DEBUG: "0"
    UPLOAD_FOLDER: "/var/app/current/uploads"
    VERSIONS_FOLDER: "/var/app/current/versions"
    PORT: "8000"
  aws:elasticbeanstalk:container:python:
    WSGIPath: app:app
    NumProcesses: 1
    NumThreads: 15
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  aws:elasticbeanstalk:application:
    Application Healthcheck URL: "/health"

packages:
  yum:
    gcc: []
    python3-devel: []

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/01_set_permissions.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      # Create necessary directories with correct permissions
      mkdir -p /var/app/current/uploads /var/app/current/versions /var/log/flask
      chown -R webapp:webapp /var/app/current/uploads /var/app/current/versions /var/log/flask
      chmod -R 755 /var/app/current/uploads /var/app/current/versions /var/log/flask

  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 100M;
      proxy_connect_timeout 75s;
      proxy_read_timeout 300s;

container_commands:
  01_pip_upgrade:
    command: |
      source /var/app/venv/*/bin/activate
      python -m pip install --upgrade pip setuptools wheel
  02_install_requirements:
    command: |
      source /var/app/venv/*/bin/activate
      pip install -r requirements.txt
  03_create_folders:
    command: |
      mkdir -p /tmp/genas_sessions
      chmod 777 /tmp/genas_sessions
      chown -R webapp:webapp /tmp/genas_sessions
  04_nginx_reload:
    command: "service nginx reload"