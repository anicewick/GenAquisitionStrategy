option_settings:
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/var/app/current"
    FLASK_DEBUG: "0"
    UPLOAD_FOLDER: "/var/app/current/static/uploads"
    VERSIONS_FOLDER: "/var/app/current/static/versions"
    DOCUMENT_STORE_PATH: "/var/app/current/static/document_store"
    PORT: "8000"
    LANG: "en_US.UTF-8"
    LC_ALL: "en_US.UTF-8"
  aws:elasticbeanstalk:container:python:
    WSGIPath: app:app
    NumProcesses: 1
    NumThreads: 15
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  aws:elasticbeanstalk:application:
    Application Healthcheck URL: "/health"

packages:
  yum:
    python3-pip: []
    python3-devel: []
    gcc: []
    gcc-c++: []
    openssl-devel: []
    libffi-devel: []
    bzip2-devel: []
    git: []

container_commands:
  01_upgrade_pip:
    command: "python3 -m pip install --no-cache-dir --upgrade pip setuptools wheel"
  02_install_requirements:
    command: "python3 -m pip install --no-cache-dir -r requirements.txt"
  03_set_permissions:
    command: |
      mkdir -p /var/app/current/static/uploads /var/app/current/static/versions /var/app/current/static/document_store /var/log/flask /var/log/gunicorn
      chown -R webapp:webapp /var/app/current/static/uploads /var/app/current/static/versions /var/app/current/static/document_store /var/log/flask /var/log/gunicorn
      chmod -R 755 /var/app/current/static/uploads /var/app/current/static/versions /var/app/current/static/document_store /var/log/flask /var/log/gunicorn
  04_nginx_reload:
    command: "systemctl reload nginx || systemctl restart nginx"

files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 100M;
      proxy_connect_timeout 75s;
      proxy_read_timeout 300s;