option_settings:
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/var/app/current"
    FLASK_DEBUG: "0"
    UPLOAD_FOLDER: "/var/app/current/uploads"
    VERSIONS_FOLDER: "/var/app/current/versions"
    PORT: "8000"
    LANG: "en_US.UTF-8"
    LC_ALL: "en_US.UTF-8"
  aws:elasticbeanstalk:container:python:
    WSGIPath: app:app
    NumProcesses: 1
    NumThreads: 15
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  aws:elasticbeanstalk:application:
    Application Healthcheck URL: "/health"

packages:
  yum:
    gcc: []
    python3-devel: []
    python3.11-devel: []
    openssl-devel: []
    libffi-devel: []
    bzip2-devel: []

commands:
  01_python_install:
    command: |
      amazon-linux-extras enable python3.11
      yum clean metadata
      yum -y install python3.11
      alternatives --set python3 /usr/bin/python3.11
      curl -O https://bootstrap.pypa.io/get-pip.py
      python3 get-pip.py
      rm get-pip.py
      python3 -m pip install --upgrade pip setuptools wheel

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/01_set_permissions.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      # Create necessary directories with correct permissions
      mkdir -p /var/app/current/uploads /var/app/current/versions /var/log/flask
      chown -R webapp:webapp /var/app/current/uploads /var/app/current/versions /var/log/flask
      chmod -R 755 /var/app/current/uploads /var/app/current/versions /var/log/flask

  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 100M;
      proxy_connect_timeout 75s;
      proxy_read_timeout 300s;

container_commands:
  01_pip_upgrade:
    command: "source /var/app/venv/*/bin/activate && pip install --upgrade pip"
  02_requirements:
    command: "source /var/app/venv/*/bin/activate && pip install -r requirements.txt"
  03_wsgi_permissions:
    command: "chmod 755 app.py"
  04_nginx_reload:
    command: "service nginx reload"